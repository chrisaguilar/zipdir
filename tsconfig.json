{
    "compilerOptions": {
        "plugins": [
            {"name": "tslint-language-service"}
        ],
        "alwaysStrict": true,
        "baseUrl": "./",
        "declaration": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./lib",
        "paths": {
            "~zipdir": ["src/index.ts"],
            "~zipdir/*": ["src/*"]
        },
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "target": "esnext"
    }
}
